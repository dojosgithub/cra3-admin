{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true, // Set to true to skip library checks (reduces build time)
    "esModuleInterop": true, // Enable ES module interop
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@components": ["src/ui/core/components/index.ts"],
      "@components/*": ["src/ui/core/components/*"],
      "@layouts": ["src/ui/layouts/index.ts"],
      "@forms": ["src/ui/core/components/forms/index.ts"],
      "@hocs": ["src/hocs/index.ts"],
      "@hooks": ["src/hooks/index.ts"],
      "@utils": ["src/utils/index.ts"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"] // Add custom type definitions
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"], // Exclude unnecessary directories
  "references": [{ "path": "./tsconfig.node.json" }]
}